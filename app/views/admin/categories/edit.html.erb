<% provide(:title, 'Edit | Manage Categories') %>
<div id="blue">
    <div class="container">
        <div class="row">
            <h3>Edit Category</h3>
        </div>
    </div>
</div>

<div id="service">
    <div class="container">
    <%= form_for (@category) do |f| %>
        <div class="field">
            <%= f.text_area :title, placeholder: "title", class: "w-100 p-2" %>
            <%= f.text_area :description, placeholder: "description", class: "w-100 p-2" %>
        </div>
        <%= f.submit "Post", class: "btn btn-block btn-primary" %>
    <% end %>
    </div>
</div>